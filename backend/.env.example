# Authentication Cookies (for Twitter/X, Instagram, etc.)
# Set COOKIE_BROWSER to your browser name (chrome, firefox, brave, etc.)
# Set COOKIES_FILE to the path of your exported cookies file
COOKIE_BROWSER="brave"
COOKIES_FILE="C:/Users/YourUser/AppData/Local/Google/Chrome/User Data/Default/Cookies"
# ============================================================================
# Environment Configuration Example
# Copy this file to .env and update with your values
# ============================================================================

# Application Settings
APP_NAME="Universal Media Downloader API"
APP_VERSION="1.0.0"
DEBUG=True

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Security Settings - CRITICAL FOR PRODUCTION
# Generate SECRET_KEY with: python generate_keys.py
SECRET_KEY="your-secret-key-here-CHANGE-THIS"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key Authentication (recommended for production)
# Set to true to enable API key authentication
ENABLE_API_KEY_AUTH=false
# Generate API key with: python generate_keys.py
API_KEY=""

# Rate Limiting (prevent abuse and DDoS)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Request Size Limits (prevent memory exhaustion)
MAX_REQUEST_SIZE=10485760  # 10 MB in bytes

# Download Limits (SECURITY: Prevent disk exhaustion)
MAX_FILE_SIZE=5368709120  # 5 GB per file (in bytes)
MAX_USER_QUOTA=107374182400  # 100 GB total per user (in bytes)
MIN_FREE_DISK_SPACE=10737418240  # Require 10 GB free (in bytes)

# Database Settings
DATABASE_URL="sqlite:///./youtube_downloader.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost/dbname"

# CORS Settings (allowed origins)
CORS_ORIGINS='["http://localhost:3000", "http://localhost:5173"]'

# Download Settings
MAX_CONCURRENT_DOWNLOADS=3
MAX_QUEUE_SIZE=100
DEFAULT_VIDEO_FORMAT="mp4"
DEFAULT_AUDIO_FORMAT="m4a"
DEFAULT_QUALITY="best"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ============================================================================
# Production Security Checklist
# ============================================================================
#
# Before deploying to production:
#
# 1. Set DEBUG=False
# 2. Generate and set a secure SECRET_KEY
# 3. Enable API key authentication (ENABLE_API_KEY_AUTH=true)
# 4. Generate and set a secure API_KEY
# 5. Configure HTTPS/TLS (use a reverse proxy like nginx)
# 6. Update CORS_ORIGINS to your actual frontend domain (HTTPS only!)
# 7. Switch to PostgreSQL for DATABASE_URL
# 8. Review and adjust rate limits based on your needs
# 9. Adjust disk space limits based on available storage
# 10. Set up log aggregation and monitoring
# 11. Regularly update dependencies for security patches
#
# ============================================================================
